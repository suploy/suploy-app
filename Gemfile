source 'https://rubygems.org'

ruby '2.1.1'

gem 'rails', '4.1.0'

# Use unicorn as the app server
gem 'unicorn'
gem 'rack-handlers'

# Background Jobs
gem 'sidekiq'
gem 'sinatra', require: false
gem 'slim'

# Frontend
gem 'slim-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'therubyracer', platforms: :ruby
gem 'jquery-rails'

# Js & CSS Framework
gem 'sass-rails'
gem 'bootstrap-sass'
gem 'font-awesome-sass'

# Js Libraries
gem 'angularjs-rails'
gem 'angular_rails_csrf'
gem 'angular-loading-bar-rails'
gem 'rails-angular-ui-router'
gem 'ng-table-rails'
gem 'ng-t-rails'
gem 'd3_rails'
gem 'zeroclipboard-rails'
gem 'jasmine-rails'

# Misc
gem 'devise'
gem 'cancan'
gem 'pg'
gem 'active_model_serializers'
gem 'settingslogic'
gem 'redis'
gem 'redis-namespace'
gem 'micro_token'
gem 'rails_12factor', group: :production
gem 'omniauth'
gem 'omniauth-github'
gem 'kaminari'
gem 'sshkey'
gem 'oyster'

# Dev & Test
group :development, :test do
  gem 'sdoc', require: false
  gem 'railroady', require: false
  gem 'coveralls', require: false
  gem 'debugger'
  gem 'mailcatcher'
  gem 'rspec-rails'
  gem 'factory_girl'
  gem 'database_cleaner'
end
